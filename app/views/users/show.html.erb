
<div class = "title">
  <% if flash[:notice] %>
  <p style="color: #00ff00;"><%= flash[:notice] %></p>
  <% end %>
</div>

<main>
 <div class = "container px-5 px-sm-5">
  <div class = "row">
   <div class = "col-md-3">
    <!--共通部分（User info）
    <%= render 'users/info', user: @user %>
    <!--共通部分(New Books)-->
    <%= render 'books/new', book: @book %>
   </div>

   <!--ユーザー投稿一覧-->
   <div class = "col-md-8 offset-md-1">
    <h2>Books</h2>
     <table class = "table table-hover table-inverse">
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>  <!--@user.books  ： そのidのユーザーの情報に紐づいた（そのidのユーザーが投稿した）投稿(1:N アソシエーション ) -->
       <% @user.books.each do |book| %>　　<!--最終的には、bookモデルのカラムとして表示させる-->
       <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
        <td>
         <%= link_to book_path(book.id) do %>
          <%= book.title %>
         <% end %>
        </td>
        <td><%= book.body %></td>
        <td></td>
       </tr>
        <% end %>
      </tbody>
     </table>
   </div>
 </div>
</main>
